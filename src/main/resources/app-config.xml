<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config/>
    <bean id="mainFrame" class="MyJFrame">
    </bean>
    <bean id="panel" class="MyJPanel" init-method="init">
        <property name="panelComponents">
            <list>
                <ref bean="nameLabel"/>
                <ref bean="name"/>
                <ref bean="streetLabel"/>
                <ref bean="street"/>
                <ref bean="phoneLabel"/>
                <ref bean="phone"/>
                <ref bean="buttonPanel"/>
                <ref bean="listLabel"/>
                <ref bean="textArea"/>
            </list>
        </property>
    </bean>
    <bean id="buttonPanel" class="MyJPanel" init-method="init">

        <property name="panelComponents">
            <list>
                <ref bean="button1"/>
            </list>
        </property>
    </bean>
    <bean id="name" class="MyJTextField"/>
    <bean id="street" class="MyJTextField"/>
    <bean id="phone" class="MyJTextField"/>
    <bean id="button1" class="MyJButton" init-method="init">
        <property name="actionListener">
            <ref bean="myButtonActionListener"/>
        </property>
        <property name="text">
            <value>Save!</value>
        </property>
    </bean>
    <bean id="myButtonActionListener" class="MyActionListener">
    </bean>
    <bean id="nameLabel" class="MyJLabel">
        <constructor-arg type="java.lang.String" value="Name:"/>
    </bean>

    <bean id="streetLabel" class="MyJLabel">
        <constructor-arg type="java.lang.String" value="Street:"/>
    </bean>

    <bean id="phoneLabel" class="MyJLabel">
        <constructor-arg type="java.lang.String" value="Phone Number:"/>
    </bean>

    <bean id="listLabel" class="MyJLabel">
        <constructor-arg type="java.lang.String" value="Address Book:"/>
    </bean>

    <bean id="addressBook" class="AddressBook"/>

    <bean id="textArea" class="MyJTextArea">

    </bean>

</beans>